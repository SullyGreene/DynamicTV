<?xml version="1.0" encoding="UTF-8"?>
<addons>
  
<addon id="plugin.video.DTVsubscriber"
version="0.0.1"
name="DTVsubscriber"
provider-name="Team DTV">
<requires>
  <import addon="script.module.xbmcswift2" version="2.4.0"/>
  <import addon="script.module.requests" version="2.9.1" />
</requires>
<extension point="xbmc.python.pluginsource" library="main.py">
  <provides>video</provides>
</extension>
<extension point="xbmc.addon.metadata">
  <summary lang="en">DTVsubscriber</summary>
  <description lang="en">Integrate any plugin installed to DTV-Guide easily and quickly</description>
  <description lang="en">Now includes a fully functioning back up and restore feature</description>
  <disclaimer lang="en">Modified by TeamJDM from the original code from "Primeaval" </disclaimer>
  <assets>
      <icon>icon.png</icon>
      <fanart>fanart.jpg</fanart>
  </assets>
</extension>
</addon>

<addon id="script.DTVguide" name="DynamicTVGuide" version="0.0.1" provider-name="DynamicTV Guide">
	<requires>
		<import addon="script.module.simplejson" version="2.0.10"/>
		<import addon="script.module.beautifulsoup4" />
		<import addon="script.module.requests" />
	</requires>
	<extension point="xbmc.python.script" library="addon.py"/>
    <extension point="xbmc.service" library="service.py" start="login"/>
	<extension point="xbmc.addon.metadata">
	<provides>video</provides>
		<description lang="en">Final Final Final ISH Release of Ivue Guide, simple free and effective, We hope you like it now with category intergration #teamiVue, Huge thanks to all coders out there for getting involved.</description>
		<disclaimer lang="en">Final Release of Ivue Guide and is forked and based on FTV Guide, Dixie , Ivue ,Primeval, tommy winthers original code, </disclaimer>
		<assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
            <screenshot>resources/images/screenshot-01.jpg</screenshot>
            <screenshot>resources/images/screenshot-02.jpg</screenshot>
            <screenshot>resources/images/screenshot-03.jpg</screenshot>
        </assets>
	</extension>
</addon>

<addon id="xbmc.repo.DynamicTVguide" name="DynamicTV Repo" version="0.0.1" provider-name="dTV">
	<extension point="xbmc.addon.repository" name="DynamicTVguide Repo Add-ons Repository">
		<dir>
		    <info compressed="false">https://raw.githubusercontent.com/SullyGreene/DynamicTV/addons.xml</info>
		    <checksum>https://raw.githubusercontent.com/SullyGreene/DynamicTV/addons.xml.md5</checksum>
		    <datadir zip="true">https://raw.githubusercontent.com/SullyGreene/DynamicTV/</datadir>
		</dir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Install DynamicTVguide Repo </summary>
		<description>Download and install for DynamicTV Guide Repo addons </description>
		<disclaimer> Repo for DynamicTV Guide Repo addon </disclaimer>
		<platform>all</platform>
		<assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
	</extension>
</addon>

</addons>
